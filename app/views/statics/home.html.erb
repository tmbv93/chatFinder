
<% if logged_in? %>

    <!-- Dette vises kun om du er logget inn -->
    <%= render 'login_home' %>

<% else %>

    <!-- Dette vises kun om du IKKE er logget inn -->

    <div id="signInPortal">

      <div id="logoWrap" class="columns centered">
      </div>

      <div id="infoWrap" class="columns large-6 medium-6">

        <div class="row">
          <div class="large-10 large-centered columns">
            <h1 class="theme-white-text shadowed">Slagord.</h1>
            <p class="theme-white-text shadowed">Her havner det mye forskjellig tekst. Opptil flere avsnitt med tekst.
            Tekst havner her. Tekst.<br><br>Mer tekst her.</p>
          </div>
        </div>

      </div>

      <div id="loginWrap" class="columns large-6 medium-6">
        <div class="row">
          <div class="large-9 columns">
            <div id="loginBox">
              <%= render 'sessions/form' %>
            </div>
            </div>
        </div>
      </div>

    </div>

<% end  %>
